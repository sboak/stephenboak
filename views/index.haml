%section{:class=>"L1", :id=>"portfolio"}
  %h1 Portfolio
  
  %section{:class=>"L2", :id=>"web"}
    %h2 Web
    -@projects.each do |project|
      -if project.get_type == "web"
        %figure{:class=> project.get_banner ? "banner" : "thumb" }
          %a{:id=>"a_#{project.get_code}", :href=> project.get_banner ? "http://www.boundary.com" : "##{project.get_code}", :title=>"#{project.get_name}" }
            %img{:src=>"/images/thumb-#{project.get_code}.jpg", :alt=>"#{project.get_name} thumbnail"}
          %figcaption
            %span.name=project.get_name
            %span.desc=project.get_desc
        %div{:class=>"overlay-container", :id=>"overlay_#{project.get_code}"}
          %div{:class=>"ui-widget-overlay"}
          %div{:class=>"ui-widget-shadow ui-corner-all"}
